<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>MyCompany.Logging.ServiceBusSink</PackageId>
    <Version>1.0.0</Version>
    <Authors>MyCompany</Authors>
    <Company>MyCompany</Company>
    <Description>ILogger provider that forwards log entries to Azure Service Bus queues.</Description>
    <PackageTags>logging;servicebus;azure</PackageTags>
    <RepositoryUrl>https://example.com/mycompany/logging/servicebussink</RepositoryUrl>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
    <PackageReference Include="Azure.Messaging.ServiceBus" Version="7.17.1" />
    <PackageReference Include="System.Text.Json" Version="8.0.4" />
  </ItemGroup>
</Project>
